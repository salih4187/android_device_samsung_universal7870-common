# hal_sensors_default.te

# cgroup tasks
allow hal_sensors_default cgroup:file getattr;

allow hal_sensors_default sysfs:file { read getattr open write };
allow hal_sensors_default sysfs_virtual:dir search;
allow hal_sensors_default sysfs_virtual:file { open read write getattr};
allow hal_sensors_default efs_file:file { write open read };
allow hal_sensors_default mnt_vendor_file:dir search;
allow hal_sensors_default vendor_data_file:file create_file_perms;
allow hal_sensors_default vendor_data_file:dir create_dir_perms;

